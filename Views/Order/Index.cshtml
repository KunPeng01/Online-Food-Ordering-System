@model IEnumerable<OnlineFoodOrderingSystem.Models.Items.Product> // Accepting a list of products
@{
    ViewData["Title"] = "Order";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-4">
        <h1>@ViewData["Title"]</h1>
        <form asp-action="OrderSummary" method="post">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Name</td>
                            <td>@product.Price.ToString("C")</td>
                            <td><img src="@product.ImageUrl" alt="@product.Name" style="width:100px;height:auto;" /></td>
                            <td>
                                <input type="number" name="quantities[@product.ProductID]" value="0" class="form-control" />
                            </td>
                        
                        </tr>
                    }
                </tbody>
            </table>
            <button type="submit" class="btn btn-primary">Confirm Order</button>
        </form>
    </div>
</body>
</html>
