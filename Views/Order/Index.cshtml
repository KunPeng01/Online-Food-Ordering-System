@model IEnumerable<OnlineFoodOrderingSystem.Models.Items.Product> // Accepting a list of products
@{
    ViewData["Title"] = "Order";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-4">
        <h1>@ViewData["Title"]</h1>
        <form asp-action="OrderSummary" method="post">
                <div class="row">
                    @foreach (var product in Model) // Loop through each product in the model
                    {
                        <div class="col-md-4 mb-4">
                            <!-- Each product card in a column -->
                            <div class="card">
                                <img src="@product.ImageUrl" alt="@product.Name" class="card-img-top" style="height: 250px; object-fit: cover;" />
                                <div class="card-body">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text">@product.Description</p>
                                    <p class="card-text"><strong>Price: @product.Price.ToString("C")</strong></p>
                                    <p>Quantity:</p>
                                    <input type="number" name="quantities[@product.ProductID]" value="0" class="form-control mb-2" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            <button type="submit" class="btn btn-primary">Confirm Order</button>
        </form>
    </div>
</body>
</html>
