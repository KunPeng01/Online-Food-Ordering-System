@model IEnumerable<OnlineFoodOrderingSystem.Models.Cart.OrderItem>
@{
    ViewData["Title"] = "Order Summary";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Product.Price * item.Quantity).ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("ConfirmOrder")" class="btn btn-success">Place Order</a>
</div>